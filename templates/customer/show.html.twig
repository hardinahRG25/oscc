{% extends 'base.html.twig' %}

{% block title %}Client
{% endblock %}

{% block body %}
	<div class="container-fluid px-2 px-md-4">
		<div class="card card-body mx-3 mx-md-4 mt-n2">
			<div class="row gx-4 mb-2">
				<div class="col-auto my-auto">
					<div class="h-100">
						<h5 class="mb-1">
							{{ customer.nameCompany }}
						</h5>
						<p class="mb-0 font-weight-normal text-sm">
							{{ customer.typeActivity }}
							-
							{{ customer.sizeCompany }}
						</p>
					</div>
				</div>
				<div class="col-lg-4 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
					<div class="nav-wrapper position-relative end-0">
						<ul class="nav nav-pills nav-fill p-1" role="tablist">
							<li class="nav-item">
								<a class="nav-link mb-0 px-0 py-1 active text-warning" href="{{ path('app_customer_edit', {'id': customer.id}) }}" aria-selected="true">
									<i class="material-icons text-lg position-relative">edit</i>
									<span class="ms-1">Modifier</span>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link mb-0 px-0 py-1 " href="{{ path('app_customer_index') }}" aria-selected="false">
									<i class="material-icons text-lg position-relative">list</i>
									<span class="ms-1">Liste</span>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="row">
					<div class="col-12 col-xl-4">
						<div class="card card-plain h-100">
							<div class="card-header pb-0 p-3">
								<div class="row">
									<div class="col-md-8 d-flex align-items-center">
										<h6 class="mb-0">Informations client</h6>
									</div>
									<div class="col-md-4 text-end">
										<a href="javascript:;">
											<i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Profile"></i>
										</a>
									</div>
								</div>
							</div>
							<div class="card-body p-3">
								<p class="text-sm">
									{{ customer.teamStructure }}
								</p>
								<hr class="horizontal gray-light my-4">
								<ul class="list-group">
									<li class="list-group-item border-0 ps-0 pt-0 text-sm">
										<strong class="text-dark">Début collaboration:</strong>
										&nbsp;
										{{ customer.dateCollaboration ? customer.dateCollaboration|date('d-m-Y') : '' }}</li>
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-dark">Contact(s):</strong>
										&nbsp;
										{{ customer.contacts }}</li>
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-dark">Email:</strong>
										&nbsp; alecthompson@mail.com</li>
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-dark">Localisation:</strong>
										&nbsp;
										{{ customer.location }}</li>
									<li class="list-group-item border-0 ps-0 pb-0">
										<strong class="text-dark text-sm">Business manager:</strong>
										&nbsp;{{ customer.businessManager }}
									</li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-12 col-xl-4">
						<div class="card card-plain h-100">
							<div class="card-header pb-0 p-3">
								<h6 class="mb-0">Spécifications techniques/professionnels</h6>
							</div>
							<div class="card-body p-3">
								<h6 class="text-uppercase text-body text-xs font-weight-bolder">Critères</h6>
								<ul class="list-group">
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-dark">Stacks techniques:</strong>
										&nbsp;
										{% for field in customer.stackTech %}
											<div style="min-width: 10%;">
												{{ field }}
											</div>
										{% endfor %}
									</li>
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-dark">Spécification PC:</strong>
										&nbsp;
										{{ customer.pcSpecification }}
									</li>
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-dark">Horaire :</strong>
										&nbsp;
										{{ customer.workTime }}
									</li>
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-danger">Critère(s) important(s):</strong>
										&nbsp;
										{{ customer.importantCriteria }}
									</li>
								</ul>
								<h6 class="text-uppercase text-body text-xs font-weight-bolder mt-4">Application</h6>
								<ul class="list-group">
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-dark">Jours fériés :</strong>
										&nbsp;
										{{ customer.dayOff }}
									</li>
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-dark">CRA :</strong>
										&nbsp;
										{{ customer.cra }}
									</li>
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-dark">Fermeture annuelle:</strong>
										&nbsp;
										{{ customer.annualClosure }}
									</li>
									<li class="list-group-item border-0 ps-0 text-sm">
										<strong class="text-dark">Création données :</strong>
										&nbsp;
										{{ customer.dateCreateInfo ? customer.dateCreateInfo|date('d-m-Y') : '' }}
									</li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-12 col-xl-4">
						<div class="card card-plain h-100">
							<div class="card-header pb-0 p-3">
								<h6 class="mb-0">Collaborateurs</h6>
							</div>
							<div class="card-body p-3">
								<ul class="list-group">
									<li class="list-group-item border-0 d-flex align-items-center px-0 mb-2 pt-0">
										<div class="avatar me-3">
											<img src="../assets/img/kal-visuals-square.jpg" alt="kal" class="border-radius-lg shadow">
										</div>
										<div class="d-flex align-items-start flex-column justify-content-center">
											<h6 class="mb-0 text-sm">Sophie B.</h6>
											<p class="mb-0 text-xs">Hi! I need more information..</p>
										</div>
										<a class="btn btn-link pe-3 ps-0 mb-0 ms-auto w-25 w-md-auto" href="javascript:;">Voir</a>
									</li>
									<li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
										<div class="avatar me-3">
											<img src="../assets/img/marie.jpg" alt="kal" class="border-radius-lg shadow">
										</div>
										<div class="d-flex align-items-start flex-column justify-content-center">
											<h6 class="mb-0 text-sm">Anne Marie</h6>
											<p class="mb-0 text-xs">Awesome work, can you..</p>
										</div>
										<a class="btn btn-link pe-3 ps-0 mb-0 ms-auto w-25 w-md-auto" href="javascript:;">Voir</a>
									</li>
									<li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
										<div class="avatar me-3">
											<img src="../assets/img/ivana-square.jpg" alt="kal" class="border-radius-lg shadow">
										</div>
										<div class="d-flex align-items-start flex-column justify-content-center">
											<h6 class="mb-0 text-sm">Ivanna</h6>
											<p class="mb-0 text-xs">About files I can..</p>
										</div>
										<a class="btn btn-link pe-3 ps-0 mb-0 ms-auto w-25 w-md-auto" href="javascript:;">Voir</a>
									</li>
									<li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
										<div class="avatar me-3">
											<img src="../assets/img/team-4.jpg" alt="kal" class="border-radius-lg shadow">
										</div>
										<div class="d-flex align-items-start flex-column justify-content-center">
											<h6 class="mb-0 text-sm">Peterson</h6>
											<p class="mb-0 text-xs">Have a great afternoon..</p>
										</div>
										<a class="btn btn-link pe-3 ps-0 mb-0 ms-auto w-25 w-md-auto" href="javascript:;">Voir</a>
									</li>
									<li class="list-group-item border-0 d-flex align-items-center px-0">
										<div class="avatar me-3">
											<img src="../assets/img/team-3.jpg" alt="kal" class="border-radius-lg shadow">
										</div>
										<div class="d-flex align-items-start flex-column justify-content-center">
											<h6 class="mb-0 text-sm">Nick Daniel</h6>
											<p class="mb-0 text-xs">Hi! I need more information..</p>
										</div>
										<a class="btn btn-link pe-3 ps-0 mb-0 ms-auto w-25 w-md-auto" href="javascript:;">Voir</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="card mt-4 mx-3 mx-md-4">
			<div class="card-header p-3">
				<h5 class="mb-0">Notes</h5>
				<p class="text-sm mb-0">
					{{ customer.notes }}
				</p>
			</div>
		</div>
		<div class="d-flex justify-content-end mt-4 mx-3 mx-md-4">
			{{ include('customer/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
